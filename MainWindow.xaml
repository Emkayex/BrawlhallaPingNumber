<Window x:Class="BrawlhallaPingNumber.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        xmlns:local="clr-namespace:BrawlhallaPingNumber"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <tb:TaskbarIcon x:Name="notifyIcon"
                    Visibility="Visible"
                    ToolTipText="Brawlhalla Ping"
                    IconSource="/img/logo.ico"
                    MenuActivation="LeftOrRightClick"
                    TrayLeftMouseUp="TrayIconClicked"
                    TrayRightMouseUp="TrayIconClicked"
    />
    
</Window>
